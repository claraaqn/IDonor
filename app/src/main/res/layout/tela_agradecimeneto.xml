<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#023679"
    tools:ignore="ExtraText">

    <ImageView
        android:layout_width="181dp"
        android:layout_height="181dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/descricao_logo_do_aplicativo"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216" />

    <!-- botões-->

    <!-- doar +-->
    <TextView
        android:id="@+id/obrigado"
        style="@style/mensagem_de_agradecimento"
        android:layout_width="252dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/descricao_texto"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/mensagem_de_agradecimento"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="350dp" />

    <TextView
        style="@style/idonor_agradecimento"
        android:layout_width="203dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/app_name"
        tools:ignore="MissingClass,MissingConstraints"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="62dp" />

    <View
        android:id="@+id/doarmaisfundo"
        android:layout_width="278dp"
        android:layout_height="48dp"
        android:layout_marginTop="632dp"
        android:background="@drawable/fundo_botao_branco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/doarmais"
        style="@style/tela_agradecimento"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:text="@string/doarmais"
        app:layout_constraintStart_toStartOf="@+id/doarmaisfundo"
        app:layout_constraintTop_toTopOf="@+id/doarmaisfundo"
        android:onClick="irParaTelaCategorias"/>

    <!-- volar à tela inicial-->

    <View
        android:id="@+id/voltar_fundo"
        android:layout_width="278dp"
        android:layout_height="48dp"
        android:layout_marginTop="708dp"
        android:background="@drawable/fundo_botao_branco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/voltar_a_tela_inical"
        style="@style/tela_agradecimento"
        android:layout_width="278dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:text="@string/voltar_tela_inicial"
        app:layout_constraintStart_toStartOf="@+id/voltar_fundo"
        app:layout_constraintTop_toTopOf="@+id/voltar_fundo"
        android:onClick="irParaTelaInicial"/>

</androidx.constraintlayout.widget.ConstraintLayout>

