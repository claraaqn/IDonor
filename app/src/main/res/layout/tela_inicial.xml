                app:layout_constraintEnd_toEndOf="@+id/fundo_companhas"
                app:layout_constraintStart_toStartOf="@+id/fundo_companhas"
                app:layout_constraintTop_toBottomOf="@+id/titulo_campanha"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints" />

