<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaCategoriasDoacoes">


    <View
        android:id="@+id/tela_de_inf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BackTela"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/patua_one"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/idonor"
        android:textColor="@color/AzulTitulo"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="306dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/patua_one"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/titulo_categorias"
        android:textColor="@color/AzulTitulo"
        android:textSize="28sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="63dp" />

    <TextView
        android:layout_width="148dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/saira_extra_condensed_medium"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/alimentos"
        android:textColor="@color/black"
        android:textSize="28sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="306dp" />

    <TextView
        android:layout_width="148dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/saira_extra_condensed_medium"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/dinheiro"
        android:textColor="@color/black"
        android:textSize="28sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="306dp" />

    <TextView
        android:layout_width="148dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/saira_extra_condensed_medium"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/vestimenta"
        android:textColor="@color/black"
        android:textSize="28sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="534dp" />

    <TextView
        android:layout_width="148dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/saira_extra_condensed_medium"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/voluntario"
        android:textColor="@color/black"
        android:textSize="28sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="534dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="151dp"
        android:layout_height="149dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/backgroundbutton"
        android:contentDescription="Botão de categoria Voluntário"
        android:drawableLeft="@drawable/voluntario"
        android:paddingLeft="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="385dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="151dp"
        android:layout_height="149dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/backgroundbutton"
        android:contentDescription="Botão de categoria Vestimenta"
        android:drawableLeft="@drawable/vestimenta"
        android:paddingLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="385dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="151dp"
        android:layout_height="149dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/backgroundbutton"
        android:contentDescription="Botão de categoria Dinheiro"
        android:drawableLeft="@drawable/dinheiro"
        android:paddingLeft="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="157dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="151dp"
        android:layout_height="149dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/backgroundbutton"
        android:contentDescription="Botão de categoria Alimentos"
        android:drawableLeft="@drawable/soupplate"
        android:paddingLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="157dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="55dp"
        android:layout_height="63dp"
        android:background="@drawable/fundo_transparente_botao"
        android:paddingLeft="18dp"
        android:paddingBottom="2dp"
        android:contentDescription="Botão Voltar"
        android:drawableLeft="@drawable/IconVoltar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>